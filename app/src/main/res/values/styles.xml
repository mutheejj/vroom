<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom styles for input fields -->
    <style name="VroomInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Custom styles for buttons -->
    <style name="VroomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <!-- Custom styles for text -->
    <style name="VroomTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources> 